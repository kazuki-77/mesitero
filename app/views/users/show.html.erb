<!-- users_controllerのshowでは@post_imagesを定義していないので定義する-->
<!-- ここから -->
<div>
  <h3><%= @user.name %></h3>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  <% if @user.id == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>
<!-- ここまでコピーとは別に追加で記述する -->
<%= render "post_images/list", post_images: @post_images %>
