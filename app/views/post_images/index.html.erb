<% @post_images.each do |post_image| %><!-- コントローラから渡された@post_images変数内から１つずつ取り出して、｜post_image｜変数へ格納-->
<div>
  <%= link_to post_image_path(post_image.id) do %>
    <%= attachment_image_tag post_image, :image %><!-- attachment_image_tagでimgタグを作成し、post_image変数のimage_idに保存された画像のimgタグを生成する -->
  <% end %>
  <p>投稿ユーザー画像:<%= image_tag('sample-author1.jpg') %></p>
  <p>ショップ名:<%= post_image.shop_name %></p>
  <p>説明:<%= post_image.caption %></p>
  <p>ユーザーネーム:<%= post_image.user.name %></p><!-- post_image変数のuser_idに関連づけられているuserモデルのnameカラムを表示する -->
  <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
</div>
<% end %>